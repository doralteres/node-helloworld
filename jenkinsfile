pipeline {
    agent any 
	parameters {
        string(name: 'RELEASE', defaultValue: 'no', description: 'RELEASE?')
    }
    stages {
        stage('SCM Checkout') {
	    steps {
		checkout scm
	    }
	}
	stage('Build') { 
            steps { 
                sh 'npm install'
		sh 'grunt'
		sh 'echo ${params.RELEASE}' 
            }
        }
    }
}